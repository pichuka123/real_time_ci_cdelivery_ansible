pipeline {
    agent any
    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO = "932805744054.dkr.ecr.us-east-1.amazonaws.com/my_app"
        IMAGE = "my_app"    
        INVENTORY = '/etc/ansible/inventory'
        PLAYBOOK = 'Ansible/ansible_k8s_deploy_playbook.yaml' 
    }

    tools {
    maven 'maven3'
    }

    triggers {   
    	githubPush()
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                git branch: 'main', url: 'https://github.com/pichuka123/real_time_ci_cdelivery_ansible.git'
            }
        }
        stage('Build Jar') {
            steps {
                echo 'Running Maven build'
                sh 'cd Application && mvn clean package'
            }
        }
        stage('Sonar Scan') {
            steps {
                echo 'Running SonarQube scan'
                sh '''
                    cd Application
                    mvn sonar:sonar \
                      -Dsonar.host.url=http://18.234.208.239:9000 \
                      -Dsonar.login=squ_fece8be32f713cae632ad1492977593978bfb003
                '''
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker Image'
                    sh 'cd Application && docker build -t princecharu/my_app:${BUILD_NUMBER} -f Dockerfile .'
                }
            }
        }
                
//       stage('Trivy Scan') {
//        options { timeout(time: 30, unit: 'MINUTES') }
//         steps {
//              sh '''
//                  mkdir -p /var/lib/jenkins/.cache/trivy
//                   # Scan image using local Trivy installation
//                    trivy image --skip-update --timeout 30m \
//                    princecharu/my_app:${BUILD_NUMBER}
//                '''
//            }
//        }


       // since Docker needs to authenticate to ECR before pushing/pulling images, 
       // we need authentication step for Docker to AWS ECR...
        stage('AWS ECR Login') {
            steps {
                withCredentials([
                    string(credentialsId: 'aws-creds-secret-key', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-creds-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        aws ecr get-login-password --region ${AWS_REGION} | \
                        docker login --username AWS --password-stdin $ECR_REPO
                    '''
                }
            }
        }

         
        stage('Push Image to AWS ECR') {
            steps {
                sh '''
                    docker tag princecharu/my_app:${BUILD_NUMBER} ${ECR_REPO}:latest
                    docker tag princecharu/my_app:${BUILD_NUMBER} ${ECR_REPO}:${BUILD_NUMBER}
                    docker push ${ECR_REPO}:latest
                    docker push ${ECR_REPO}:${BUILD_NUMBER}
                '''
            }
        }

        stage('Update Kubernetes Deployment Manifest File') {
            environment {
                GIT_REPO_NAME = "real_time_ci_cdelivery_ansible"
                GIT_USER_NAME = "pichuka123"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "prince.charu7@gmail.com"
                        git config user.name "pichuka123"

                        sed -i "s|my_app:.*|my_app:${BUILD_NUMBER}|g" Ansible/k8s_deployment.yaml

                        git add .
                        git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

        
        stage('K8s Deployment using Ansible') {
                    steps {
                        withCredentials([sshUserPrivateKey(credentialsId: 'deploy-key',
                                          keyFileVariable: 'KEYFILE',
                                          usernameVariable: 'DEPLOY_USER')]) {
                            sh 'chmod 600 $KEYFILE'
                            sh '''
                                # Run the playbook to deploy to Kubernetes cluster
                                ansible-playbook -i ${INVENTORY} ${PLAYBOOK} \
                                --user $DEPLOY_USER --private-key $KEYFILE \
                                --ssh-common-args '-o StrictHostKeyChecking=no -o IdentitiesOnly=yes'
                            '''
                        }
                    }
            }
    }
}

